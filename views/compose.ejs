    <label for="">Date</label>
  <input type="date" name="date" class="form-control" value="" required>
  <br>
    <label for="">Publisher</label>
  <input type="text" name="publisher" class="form-control" placeholder="Name of the Publisher" value="" required>
  <br>

  <button type="submit" name="button" class="btn btn-primary mt-2">Publish</button>
</form>
</div>
